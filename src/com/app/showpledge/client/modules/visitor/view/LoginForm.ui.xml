<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:VerticalPanel horizontalAlignment="center">
		<g:Label ui:field="title" styleName="page-title" />
		<g:Grid>
			<g:row>
				<g:customCell>
					<g:Label text="Email" horizontalAlignment="right"  />
				</g:customCell>
				<g:customCell>
					<g:TextBox ui:field="email" visibleLength="35"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="Password" horizontalAlignment="right"  />
				</g:customCell>
				<g:customCell>
					<g:PasswordTextBox ui:field="password" visibleLength="35"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="" />
				</g:customCell>
				<g:customCell>
					<g:Button ui:field="loginBtn" text="OK" />
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="Don't have an account?" />
				</g:customCell>
				<g:customCell>
					<g:Hyperlink ui:field="signUpLink" text="Quick Signup" styleName="hyperlink"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="Forgot Password?" />
				</g:customCell>
				<g:customCell>
					<g:Hyperlink ui:field="forgotPasswordLink" text="Enter email and click here" styleName="hyperlink" />
				</g:customCell>
			</g:row>
		</g:Grid>
	</g:VerticalPanel>

</ui:UiBinder> 